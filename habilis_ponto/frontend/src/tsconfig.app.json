{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "baseUrl": "",
    "types": ["node", "dom-mediacapture-record"],
    "paths": {
      "exceljs": [
        "node_modules/exceljs/dist/exceljs.js"
      ]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "typings.d.ts"
  ]
}
